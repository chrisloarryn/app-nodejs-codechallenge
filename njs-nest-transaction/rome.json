{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "off",
				"useShorthandArrayType": "error",
        "noShoutyConstants": "warn"
			},
			"complexity": {
				"recommended": true
			},
			"correctness": {
				"recommended": true
			},
			"performance": {
				"recommended": true
			},
			"security": {
				"recommended": true
			},
			"suspicious": {
				"recommended": true,
				"noExplicitAny": "warn"
			},
			"nursery": {
        "all": true
			}
		}
	},
	"formatter": {
		"enabled": true,
    "formatWithErrors": true,
    "indentStyle": "tab",
    "indentSize": 2,
    "lineWidth": 80,
    "ignore": []
	},
	"organizeImports": {
    "enabled": true,
    "ignore": ["scripts/*.js"]
  }
}
